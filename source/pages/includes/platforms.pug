fieldset
	legend=titles.platforms[lang]
	.radio-buttons
		mixin createRadioButton(platform, id, name, checked)
			p.radio-button
				if id === 'mobile'
					input(type="radio" name=name, id=`${id}-radio`, value=id, checked)._native.visually-hidden
				else
					input(type="radio" name=name, id=`${id}-radio`, value=id)._native.visually-hidden
				label(for=`${id}-radio`)._custom=platform

		each platform, id in platforms
			+createRadioButton(platform.name[lang], id, "platform")

